<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/create_item_header" />
    <androidx.cardview.widget.CardView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp100" app:cardCornerRadius="@dimen/dp25" app:cardElevation="@dimen/dp10" app:cardUseCompatPadding="true">
        <ScrollView android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dp20">
                <ImageView android:id="@id/iv_logo" android:layout_width="@dimen/dp100" android:layout_height="@dimen/dp100" android:layout_marginTop="@dimen/dp10" android:src="@drawable/qr7_calendar_bg" android:layout_centerHorizontal="true" />
                <LinearLayout android:orientation="vertical" android:id="@id/li_field" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp30" android:layout_below="@id/iv_logo">
                    <androidx.cardview.widget.CardView android:layout_width="fill_parent" android:layout_height="wrap_content" app:cardCornerRadius="@dimen/dp30" app:cardUseCompatPadding="true">
                        <LinearLayout android:gravity="center_vertical" android:id="@id/li_name" android:background="@drawable/sp_edit_txt" android:layout_width="fill_parent" android:layout_height="@dimen/dp60">
                            <ImageView android:layout_width="@dimen/dp30" android:layout_height="@dimen/dp30" android:src="@drawable/qr7_title_black" android:layout_marginStart="@dimen/dp15" />
                            <EditText android:textSize="@dimen/sp16" android:gravity="start" android:id="@id/et_name" android:background="@color/transparent" android:padding="@dimen/dp20" android:layout_width="fill_parent" android:layout_height="fill_parent" android:hint="@string/title" android:inputType="textCapWords" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:layout_width="fill_parent" android:layout_height="wrap_content" app:cardCornerRadius="@dimen/dp30" app:cardUseCompatPadding="true">
                        <LinearLayout android:gravity="center_vertical" android:id="@id/li_location" android:background="@drawable/sp_edit_txt" android:layout_width="fill_parent" android:layout_height="@dimen/dp60">
                            <ImageView android:layout_width="@dimen/dp30" android:layout_height="@dimen/dp30" android:src="@drawable/qr7_location_black" android:layout_marginStart="@dimen/dp15" />
                            <EditText android:textColor="@color/black" android:gravity="start" android:id="@id/et_location" android:background="@color/transparent" android:padding="@dimen/dp20" android:layout_width="fill_parent" android:layout_height="fill_parent" android:hint="@string/location" android:inputType="textCapSentences" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:layout_width="fill_parent" android:layout_height="wrap_content" app:cardCornerRadius="@dimen/dp30" app:cardUseCompatPadding="true">
                        <LinearLayout android:gravity="center_vertical" android:id="@id/li_website" android:background="@drawable/sp_edit_txt" android:layout_width="fill_parent" android:layout_height="@dimen/dp60">
                            <ImageView android:layout_width="@dimen/dp30" android:layout_height="@dimen/dp30" android:src="@drawable/qr7_web_black" android:layout_marginStart="@dimen/dp15" />
                            <EditText android:textSize="@dimen/sp16" android:gravity="start" android:id="@id/et_website" android:background="@color/transparent" android:padding="@dimen/dp20" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/https_www" android:hint="@string/website" android:inputType="textUri" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:layout_width="fill_parent" android:layout_height="wrap_content" app:cardCornerRadius="@dimen/dp30" app:cardUseCompatPadding="true">
                        <LinearLayout android:gravity="center_vertical" android:id="@id/li_start_date" android:background="@drawable/sp_edit_txt" android:layout_width="fill_parent" android:layout_height="@dimen/dp60">
                            <ImageView android:layout_width="@dimen/dp30" android:layout_height="@dimen/dp30" android:src="@drawable/qr7_calendar_black" android:layout_marginStart="@dimen/dp15" />
                            <TextView android:gravity="start" android:id="@id/tv_start_date" android:background="@color/transparent" android:padding="@dimen/dp20" android:layout_width="fill_parent" android:layout_height="fill_parent" android:hint="@string/start_date" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:layout_width="fill_parent" android:layout_height="wrap_content" app:cardCornerRadius="@dimen/dp30" app:cardUseCompatPadding="true">
                        <LinearLayout android:gravity="center_vertical" android:id="@id/li_end_date" android:background="@drawable/sp_edit_txt" android:layout_width="fill_parent" android:layout_height="@dimen/dp60">
                            <ImageView android:layout_width="@dimen/dp30" android:layout_height="@dimen/dp30" android:src="@drawable/qr7_calendar_black" android:layout_marginStart="@dimen/dp15" />
                            <TextView android:gravity="start" android:id="@id/tv_end_date" android:background="@color/transparent" android:padding="@dimen/dp20" android:layout_width="fill_parent" android:layout_height="fill_parent" android:hint="@string/end_date" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@id/card_tv" android:layout_width="fill_parent" android:layout_height="wrap_content" app:cardCornerRadius="@dimen/dp30" app:cardUseCompatPadding="true">
                        <LinearLayout android:gravity="center_vertical" android:id="@id/li_phone" android:background="@drawable/sp_edit_txt" android:layout_width="fill_parent" android:layout_height="wrap_content">
                            <EditText android:textSize="@dimen/sp16" android:gravity="start" android:id="@id/et_msg" android:background="@drawable/sp_edit_txt" android:padding="@dimen/dp20" android:layout_width="fill_parent" android:layout_height="@dimen/dp200" android:hint="@string/note" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <TextView android:textSize="@dimen/sp18" android:textColor="@color/white" android:gravity="center" android:id="@id/tv_create" android:background="@drawable/sp_btn_red" android:layout_width="fill_parent" android:layout_height="@dimen/dp50" android:layout_marginTop="@dimen/dp40" android:layout_marginBottom="@dimen/dp40" android:text="@string/create" android:layout_below="@id/li_field" android:fontFamily="@font/ttnorms_regular" />
            </RelativeLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>